<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mTvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/normal_poppins"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Electrical Manager"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/mTvDate"
        app:layout_constraintEnd_toStartOf="@+id/mTvDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableEnd="@drawable/ic_forwardgrey"
        android:drawableRight="@drawable/ic_forwardgrey"
        android:fontFamily="@font/normal_poppins"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="09-29-2021"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintBottom_toTopOf="@+id/divider16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mTvName"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/divider16"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvDate" />
</androidx.constraintlayout.widget.ConstraintLayout>