<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_2x"
    android:layout_marginTop="@dimen/margin_1x"
    android:layout_marginEnd="@dimen/margin_2x"
    android:background="@drawable/box_less_rounded_bg"
    android:backgroundTint="@color/colorAccent_alpha"
    android:orientation="vertical"
    android:padding="@dimen/margin_2x">

    <TextView
        android:id="@+id/left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:drawableStart="@drawable/ic_chatwhite"
        android:drawablePadding="@dimen/margin_1x"
        android:drawableTint="@color/colorAccent"
        android:drawableEnd="@drawable/ic_rightarrow"
        android:linksClickable="true"
        android:text="Let me check but I think we had it right"
        android:textColor="@color/black_color"
        android:textColorLink="@color/blue"
        android:textSize="@dimen/text_mediumLarge" />

</RelativeLayout>
