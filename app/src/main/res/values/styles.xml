<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:targetApi="lollipop">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/ActivityEnterTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>


        <!--<item name="android:windowAnimationStyle">@style/ActivityEnterTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

    <!-- snackbar style in res/values -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white_color</item>
    </style>
    <style name="AppBlueTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:targetApi="lollipop">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/email_end_color</item>
        <item name="colorPrimaryDark">@color/email_end_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/ActivityEnterTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>


        <!--<item name="android:windowAnimationStyle">@style/ActivityEnterTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>
    <style name="editTextStyle">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/curved_edit_text_bg</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActivityEnterTheme" parent="@android:style/Animation.Activity">>
        <item name="android:activityOpenEnterAnimation">@anim/trans_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/trans_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/trans_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/trans_right_out</item>
    </style>


    <!-- Splash Activity theme. -->
    <style name="Theme.Splash" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
        <item name="android:scaleType">centerCrop</item>
    </style>

